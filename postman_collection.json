{
  "info": {
    "name": "AmazonScraper API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/health"
      }
    },
    {
      "name": "Ready",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/ready"
      }
    },
    {
      "name": "Countries",
      "request": {
        "method": "GET",
        "header": [
          {"key": "X-API-Key", "value": "{{api_key}}"}
        ],
        "url": "{{base_url}}/api/countries"
      }
    },
    {
      "name": "Scrape",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "X-API-Key", "value": "{{api_key}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"url\": \"https://www.amazon.com/dp/B0FMDNZ61S\"\n}"
        },
        "url": "{{base_url}}/api/scrape"
      }
    }
  ],
  "variable": [
    {"key": "base_url", "value": "http://127.0.0.1:5000"},
    {"key": "api_key", "value": "your_api_key_here"}
  ]
}
